{
  "manifest_version": 2,
  "name": "Firefox Container Selector",
  "version": "1.0",
  "description": "Forces container selection for new tabs",
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "96": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "contextualIdentities",
    "tabs",
    "cookies",
    "webRequest",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "select-container.html"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ledongthuc@gmail.com"
    }
  }
}